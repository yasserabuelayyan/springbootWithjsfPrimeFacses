<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<application>


		<locale-config>

			<default-locale>en</default-locale>

			<supported-locale>en</supported-locale>

			<supported-locale>ar</supported-locale>

		</locale-config>

		<resource-bundle>

			<base-name>de.fred4jupiter.spring.boot.jsf.resource.yasser</base-name>
			<var>l</var>
		</resource-bundle>

		<!-- <message-bundle>de.fred4jupiter.spring.boot.jsf.resource</message-bundle> -->
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

	</application>




	<navigation-rule>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>employees-Page</from-outcome>
			<to-view-id>view/emplooyee/employees.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>



	<navigation-rule>
		<navigation-case>
			<from-outcome>details</from-outcome>
			<to-view-id>view/emplooyee/details.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>profile</from-outcome>
			<to-view-id>view/user/profile.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>add-Employee-Page</from-outcome>
			<to-view-id>view/emplooyee/add-employee.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>edit-employee-Page</from-outcome>
			<to-view-id>view/emplooyee/edit-employee.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>email-compose</from-outcome>
			<to-view-id>view/email/email-compose.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>email-inbox</from-outcome>
			<to-view-id>view/email/email-inbox.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>email-read</from-outcome>
			<to-view-id>view/email/email-read.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	
	
		<navigation-rule>
		<navigation-case>
			<from-outcome>email-send</from-outcome>
			<to-view-id>view/email/email-send.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	
		<navigation-rule>
		<navigation-case>
			<from-outcome>email-starred</from-outcome>
			<to-view-id>view/email/email-starred.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>




	<validator>
		<validator-id>EmailValidator</validator-id>
		<validator-class>de.fred4jupiter.spring.boot.jsf.validator.EmailValidator</validator-class>
		 
	</validator>




</faces-config>